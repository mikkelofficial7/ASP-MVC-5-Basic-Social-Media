
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/carrousel.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Simple Tour : How To Start</title>
</head>
<body>
    <div class="container">
        <h2></h2>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="@Url.Content("~/Content/img-logo/tour0.png")" alt="Intro" style="width:100%; height:100%;">
                </div>

                <div class="item">
                    <img src="@Url.Content("~/Content/img-logo/tour1.png")" alt="Tour 1" style="width:100%; height:100%;">
                </div>

                <div class="item">
                    <img src="@Url.Content("~/Content/img-logo/tour2.png")" alt="Tour 2" style="width:100%; height:100%;">
                </div>

                <div class="item">
                    <img src="@Url.Content("~/Content/img-logo/tour3.png")" alt="Tour 3" style="width:100%;height:100%;">
                </div>

                <div class="item">
                    <img src="@Url.Content("~/Content/img-logo/tour4.png")" alt="Tour 4" style="width:100%;height:100%;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <form method="post" action="@Url.Action("Finish","Main")">
            <button type="submit" name="finish" class="finish-btn">I Understand The Simple Tour <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
        </form>
    </div>
</body>
</html>
