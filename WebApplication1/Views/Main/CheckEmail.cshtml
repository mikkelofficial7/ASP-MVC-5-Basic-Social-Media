@model WebApplication1.Models.Registration
@{
    Layout = null;
    ViewBag.Title = "Check Email";
}

<!DOCTYPE html>
<html lang="en">
<!--<![endif]-->
<head>
    <meta charset="utf-8" name="viewport" content="initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/css/style.css">
    <link rel="icon" href="~/Content/img-logo/Untitled.ico">
</head>
<body class="bg-body-image">
    <section class="container">
        <div class="login">
            <h1>Insert Your Registered Email and Username</h1>
            @if (ViewBag.Message != null)
            {
                <div class="col-md-12" style="color : @ViewBag.Color;">
                    <div class="alert alert-danger">
                        @ViewBag.Message
                    </div>
                </div>
            }
            <br/>
            <form method="post" action="@Url.RouteUrl("CheckEmail")">
                <p>@Html.TextBoxFor(model => model.Username, new { @class = "form-control logins", @placeholder = "Insert Your Username", required = "required" })</p>
                <p>@Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Insert Your Email", required = "required", @type = "email" })</p>
                <p class="submit"><input type="submit" name="commit" value="Check"></p>
            </form>
        </div>
        <div class="login-help">
            <p>Ready To Share Moment? <a href="@Url.Action("Login", "Main")">Back To Login</a>.</p>
        </div>
    </section>
</body>
</html>

