@model WebApplication1.Models.Registration
@{
    Layout = null;
    ViewBag.Title = "Verify Your Register";
}

<!DOCTYPE html>
<html lang="en">
<!--<![endif]-->
<head>
    <meta charset="utf-8" name="viewport" content="initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/css/style.css">
    <link rel="icon" href="~/Content/img-logo/Untitled.ico">
</head>
<body class="bg-body-image">
    <section class="container">
        <div class="login">
            <h1>Check Your Verification Code In Your Email</h1>
            <p id="verif-alert"><i class="fa fa-exclamation-triangle"></i> Do not close the page</p>
            <p id="verif-alert">Code : @ViewBag.code</p>
            @if (ViewBag.Message != null)
            {
                <div class="col-md-12 alertss" style="color : @ViewBag.Color;">
                    <div class="alert alert-danger">
                        @ViewBag.Message
                    </div>
                </div>
            }
            <form method="post" action="@Url.RouteUrl("Verify")">
                <p class="verif-p">@Html.TextBoxFor(model =>model.UserActivationCode, new { @class = "form-control verif", @placeholder = "10-Digit Code Here", @maxlength="10" ,required = "required" })</p>
                <p class="submit"><input type="submit" name="commit" value="Verify"></p>
            </form>
        </div>
    </section>
</body>
</html>

