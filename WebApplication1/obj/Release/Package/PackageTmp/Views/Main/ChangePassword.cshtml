@model WebApplication1.Models.Registration
@{
    Layout = null;
    ViewBag.Title = "ChangePassword";
}

<!DOCTYPE html>
<html lang="en">
<!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/css/style.css">
</head>
<body class="bg-body-image">
    <section class="container">
        <div class="login">
            <h1>Insert New Password</h1>
            @if (ViewBag.Message != null)
            {
                <div class="col-md-12" style="color : @ViewBag.Color;">
                    <div class="alert alert-danger">
                        @ViewBag.Message
                    </div>
                </div>
            }
            <form method="post" action="@Url.RouteUrl("ChangePassword")">
                <p>@Html.TextBoxFor(model => model.Password, new { @class = "form-control logins", @id="password", @placeholder = "Insert New Password", required = "required", @type="password" })</p>
                <p>@Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control logins", @id = "password-confirm", @placeholder = "Insert Confirm Password", required = "required", @type = "password" })</p>
                <p class="submit"><span id="match"></span> &nbsp;&nbsp;&nbsp;<input type="checkbox" id="showPass" />Show password &nbsp;&nbsp;&nbsp;<input type="submit" name="commit" value="Change"></p>
            </form>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
            <script type="text/javascript" src="~/Scripts/showPass.js"></script>
        </div>
    </section>
</body>
</html>

