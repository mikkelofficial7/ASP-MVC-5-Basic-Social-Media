@model WebApplication1.Models.Registration
@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
 <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/css/style.css">
</head>
<body class="bg-body-image">
    <section class="container">
        <div class="login">
            <h1>Login to HideID now</h1>
            @if (ViewBag.Message != null)
            {
                <div class="col-md-12" style="color : @ViewBag.Color;">
                    <div class="alert alert-danger">
                        @ViewBag.Message
                    </div>
                </div>
            }
            <form method="post" action="@Url.Action("Login", "Main")">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <p>@Html.TextBoxFor(model => model.Username, new { @class = "form-control logins", @placeholder = "Username", required = "required" })</p>
                <p>@Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Password", required = "required", @type = "password" })</p>
                <p class="remember_me">
                    <label>
                        <input type="checkbox" name="remember_me" id="remember_me">
                        Remember me on this device
                    </label>
                </p>
                <p class="submit"><input type="submit" name="commit" value="Login"></p>
            </form>
        </div>

        <div class="login-help">
            <p>Are You a New Comer? <a href="@Url.RouteUrl("Register")">Register Here</a>.</p>
            <p>Forgot Your Password? <a href="@Url.RouteUrl("CheckEmail")">Click Here</a>.</p>
            <br />
            <a href="@Url.Action("Intro","Main")">Go To Main Menu</a>
        </div>
    </section>
</body>
</html>

